<script type="text/javascript">
$(function() {
    makeTabActive("outbox");
    });

</script>




<div class="g_6 contents_header">
	<h3 class="i_16_dashboard tab_label">Balance: <%= current_user.account.balance %> &euro;</h3>
</div>
<div class="g_6 contents_options">
	<div class="simple_buttons">
		<div class="bwIcon">Buy credits</div>
	</div>
	

</div>




<!-- Charts -->
<div class="g_12">
					
						
	<h2>Listing my stamps</h2>
	
	<table id="tabletabs-2" class="tables ui-tabs-panel ui-widget-content ui-corner-bottom ui-tabs-hide">
	  <tr>
	    <th>Code</th>
	    <th>Type</th>
	    <th>Expires at</th>
	    <th>Valid</th>
	    
	    <th></th>
	  </tr>
	
	<% @stamps.each do |stamp| %>
	  <tr>
	    <td style="color: <%= (stamp.stamp_type == "international") ? "#BB5500": "#5500BB"%>"><%= stamp.code %></td>
	    <td><%= stamp.stamp_type %></td>
	    <td><%= stamp.expires_at %></td>
	    <td><%= stamp.valid %></td>
	   
	    <td><%= link_to 'Delete', stamp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% end %>
	</table>
	
	<br />
					
</div>
				
				


