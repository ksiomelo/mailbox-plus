<%= form_for(@mailbox) do |f| %>
  <% if @mailbox.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mailbox.errors.count, "error") %> prohibited this mailbox from being saved:</h2>

      <ul>
      <% @mailbox.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
   <div class="line_grid">
	<div class="g_3"><%= f.label :name %> *</div>
	<div class="g_9">
		<%= f.text_field :name %>
		<div class="field_notice">Assign a name to this mailbox</div>
	</div>
  </div>
  
  <div class="line_grid">
	<div class="g_3"><%= f.label :street %> *</div>
	<div class="g_9">
		<%= f.text_field :street %>
	</div>
  </div>
							
<div class="line_grid">
	<div class="g_3"><%= f.label :city %> *</div>
	<div class="g_9">
		<%= f.text_field :city %>
	</div>
  </div>
  
  
  <div class="line_grid">
	<div class="g_3"><%= f.label :country %> *</div>
	<div class="g_9">
		<%= f.text_field :country %>
	</div>
  </div>
  
   <div class="line_grid">
	<div class="g_3"><%= f.submit %></div>
  </div>
  
<% end %>
