	<script type="text/javascript">
		function makeTabActive(tabId){
		     // Handler for .ready() called.
		     $(".active_tab").removeClass("active_tab");
		     $("#"+tabId+"-tab").addClass("active_tab");
		}
		
		

	</script>
	
	
	<%= stylesheet_link_tag "index.css", "all"-%>
	
